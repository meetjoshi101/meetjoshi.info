---
import { getCollection, type CollectionEntry } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

const posts: CollectionEntry<'blogs'>[] = await getCollection('blogs');
posts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<MainLayout title="Blog Posts">
    <div class="py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-12">Blog Posts</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {posts.map((post) => (
                    <article class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                        {post.data.image && (
                            <img 
                                src={post.data.image} 
                                alt={post.data.title}
                                class="w-full h-56 object-cover"
                            />
                        )}
                        <div class="p-6">
                            <div class="flex gap-2 mb-4">
                                {post.data.tags.map((tag: string) => (
                                    <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                            <h2 class="text-2xl font-bold text-gray-900 mb-3">
                                {post.data.title}
                            </h2>
                            <p class="text-gray-700 mb-4">
                                {post.data.description}
                            </p>
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-gray-500">
                                    {post.data.publishDate.toLocaleDateString('en-US', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </span>
                                <a href={`/blogs/${post.slug}`} 
                                   class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                                    Read More
                                </a>
                            </div>
                        </div>
                    </article>
                ))}
            </div>
        </div>
    </div>
</MainLayout>
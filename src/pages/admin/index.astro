---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getCollection } from 'astro:content';

// Get blog posts and projects for stats
const blogs = await getCollection('blogs');
const projects = await getCollection('projects');

// Sort by publish date to get the latest items
blogs.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
projects.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

// Get the most recent blog and project
const latestBlog = blogs[0];
const latestProject = projects[0];

// Dashboard stats
const stats = [
  { name: 'Total Blog Posts', value: blogs.length, icon: 'M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z' },
  { name: 'Total Projects', value: projects.length, icon: 'M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01' },
];
---

<AdminLayout title="Admin Dashboard | Meet Joshi">
  <div class="mb-6">
    <h2 class="text-2xl font-bold mb-4">Dashboard</h2>
    <p class="text-base-content/70">
      Welcome to your admin dashboard. Here you can manage your blog posts, projects, and site content.
    </p>
  </div>
  
  <!-- Stats overview -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    {stats.map((stat) => (
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body p-4 flex flex-row items-center">
          <div class="avatar placeholder mr-4">
            <div class="bg-primary/10 text-primary rounded-md w-12 h-12 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={stat.icon} />
              </svg>
            </div>
          </div>
          <div>
            <div class="text-2xl font-bold">{stat.value}</div>
            <div class="text-sm opacity-70">{stat.name}</div>
          </div>
        </div>
      </div>
    ))}
  </div>
  
  <!-- Recent content -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <!-- Latest blog post -->
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body">
        <h3 class="card-title text-lg flex justify-between items-center">
          <span>Latest Blog Post</span>
          <a href="/admin/blogs" class="btn btn-sm btn-ghost">View All</a>
        </h3>
        
        {latestBlog ? (
          <div class="mt-3">
            <h4 class="font-medium">{latestBlog.data.title}</h4>
            <p class="text-sm opacity-70">Published: {new Date(latestBlog.data.publishDate).toLocaleDateString()}</p>
            <p class="mt-2 line-clamp-2">{latestBlog.data.description}</p>
            <div class="card-actions mt-4">
              <a href={`/admin/blogs/edit/${latestBlog.slug}`} class="btn btn-sm btn-outline">Edit</a>
              <a href={`/blogs/${latestBlog.slug}`} class="btn btn-sm btn-ghost" target="_blank">View</a>
            </div>
          </div>
        ) : (
          <p class="text-base-content/70">No blog posts yet.</p>
        )}
      </div>
    </div>
    
    <!-- Latest project -->
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body">
        <h3 class="card-title text-lg flex justify-between items-center">
          <span>Latest Project</span>
          <a href="/admin/projects" class="btn btn-sm btn-ghost">View All</a>
        </h3>
        
        {latestProject ? (
          <div class="mt-3">
            <h4 class="font-medium">{latestProject.data.title}</h4>
            <p class="text-sm opacity-70">Added: {new Date(latestProject.data.publishDate).toLocaleDateString()}</p>
            <p class="mt-2 line-clamp-2">{latestProject.data.description}</p>
            <div class="card-actions mt-4">
              <a href={`/admin/projects/edit/${latestProject.slug}`} class="btn btn-sm btn-outline">Edit</a>
              <a href={`/projects/${latestProject.slug}`} class="btn btn-sm btn-ghost" target="_blank">View</a>
            </div>
          </div>
        ) : (
          <p class="text-base-content/70">No projects yet.</p>
        )}
      </div>
    </div>
  </div>
  
  <!-- Quick actions -->
  <div class="card bg-base-100 shadow-sm">
    <div class="card-body">
      <h3 class="card-title text-lg">Quick Actions</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-3 mt-4">
        <a href="/admin/blogs/new" class="btn btn-outline">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Blog Post
        </a>
        <a href="/admin/projects/new" class="btn btn-outline">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Project
        </a>
        <a href="/admin/site-content" class="btn btn-outline">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Edit Site Content
        </a>
        <a href="/" class="btn btn-outline" target="_blank">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          View Site
        </a>
      </div>
    </div>
  </div>
</AdminLayout>

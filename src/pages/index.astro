---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/sections/Hero.astro';
import ProjectCard from '../components/common/ProjectCard.astro';
import Skills from '../components/sections/Skills.astro';
import { getCollection, getEntry, type CollectionEntry } from 'astro:content';

// Get the latest projects and blogs
const projects = await getCollection('projects');
const blogs = await getCollection('blogs');
const aboutContent = await getEntry('site-content', 'about');
const contactContent = await getEntry('site-content', 'contact');
const skillsContent = await getEntry('site-content', 'skills');

// Sort by publish date and get the latest items
projects.sort((a: CollectionEntry<'projects'>, b: CollectionEntry<'projects'>) => 
    b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
blogs.sort((a: CollectionEntry<'blogs'>, b: CollectionEntry<'blogs'>) => 
    b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// Take only the latest 3 projects
const latestProjects = projects.slice(0, 3);

const { Content: AboutContent } = await (aboutContent?.render() ?? { Content: () => null });
const { Content: ContactContent } = await (contactContent?.render() ?? { Content: () => null });

// Prepare skills data
const skillsData = {
    technical: skillsContent?.data.technical ?? [],
    soft: skillsContent?.data.softSkills ?? []
};
---

<MainLayout title="Meet Joshi - Portfolio" description="Welcome to my portfolio website">
    <Hero />
    
    <section id="about" class="py-20 bg-base-100">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold mb-4">{aboutContent?.data?.title ?? 'About Me'}</h2>
                <div class="divider divider-primary w-24 mx-auto"></div>
            </div>
            <div class="prose prose-lg max-w-none">
                <AboutContent />
            </div>
        </div>
    </section>

    <section id="skills" class="py-20 bg-base-200">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold mb-4">{skillsContent?.data?.title}</h2>
                <p class="text-xl opacity-75">{skillsContent?.data?.subtitle}</p>
                <div class="divider divider-primary w-24 mx-auto mt-8"></div>
            </div>
            <Skills skills={skillsData} />
        </div>
    </section>

    <section id="projects" class="py-20 bg-base-200">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center mb-12">
                <h2 class="text-4xl font-bold">Featured Projects</h2>
                <a href="/projects" class="btn btn-link no-underline">View All Projects â†’</a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {latestProjects.map((project: CollectionEntry<'projects'>) => (
                    <ProjectCard 
                        title={project.data.title}
                        description={project.data.description}
                        technologies={project.data.technologies}
                        imageUrl={project.data.image}
                        projectUrl={project.data.liveUrl}
                        githubUrl={project.data.github}
                    />
                ))}
            </div>
        </div>
    </section>

    <section id="contact" class="py-20 bg-base-100">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold mb-4">{contactContent?.data?.title ?? 'Contact Me'}</h2>
                <p class="text-xl opacity-75">{contactContent?.data?.subtitle}</p>
                <div class="divider divider-primary w-24 mx-auto mt-8"></div>
            </div>
            <div class="max-w-3xl mx-auto">
                <div class="card bg-base-200 shadow-xl">
                    <div class="card-body">
                        <div class="prose prose-lg max-w-none">
                            <ContactContent />
                        </div>
                        <div class="card-actions justify-center mt-8 flex-wrap gap-4">
                            <a href="mailto:me@meetjoshi.info" 
                            class="btn btn-primary gap-2">

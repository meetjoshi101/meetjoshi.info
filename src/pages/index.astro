---
import '../styles/global.css';
import Navbar from '../components/layout/Navbar.astro';
import Hero from '../components/sections/Hero.astro';
import ProjectCard from '../components/common/ProjectCard.astro';
import { getCollection, getEntry, type CollectionEntry } from 'astro:content';

// Get the latest projects and blogs
const projects = await getCollection('projects');
const blogs = await getCollection('blogs');
const aboutContent = await getEntry('site-content', 'about');
const contactContent = await getEntry('site-content', 'contact');

// Sort by publish date and get the latest items
projects.sort((a: CollectionEntry<'projects'>, b: CollectionEntry<'projects'>) => 
    b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
blogs.sort((a: CollectionEntry<'blogs'>, b: CollectionEntry<'blogs'>) => 
    b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// Take only the latest 3 projects
const latestProjects = projects.slice(0, 3);

const { Content: AboutContent } = await (aboutContent?.render() ?? { Content: () => null });
const { Content: ContactContent } = await (contactContent?.render() ?? { Content: () => null });
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Your Name - Portfolio</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-gray-50">
		<Navbar />
		<main>
			<Hero />
			
			<section id="about" class="py-20">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center mb-16">
						<h2 class="text-4xl font-bold text-gray-900 mb-4">{aboutContent?.data?.title ?? 'About Me'}</h2>
						<div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
					</div>
					<div class="grid md:grid-cols-5 gap-8">
						<div class="md:col-span-3">
							<div class="prose prose-lg max-w-none prose-headings:text-blue-600 prose-h3:text-xl prose-h3:font-semibold prose-p:text-gray-700 prose-a:text-blue-600">
								<AboutContent />
							</div>
						</div>
						<div class="md:col-span-2 bg-white rounded-xl shadow-lg p-8">
							<div class="space-y-6">
								<div>
									<h3 class="text-xl font-bold text-blue-600 mb-4 flex items-center">
										<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
										</svg>
										Skills & Technologies
									</h3>
									<div class="flex flex-wrap gap-2">
										{['HTML5', 'CSS3', 'JavaScript', 'React', 'Astro', 'Node.js', 'Express', 'SQL', 'APIs'].map((skill) => (
											<span class="bg-blue-100 text-blue-700 px-3 py-1.5 rounded-full text-sm font-medium hover:bg-blue-200 transition-colors">
												{skill}
											</span>
										))}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<section id="projects" class="py-20 bg-white">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="flex justify-between items-center mb-12">
						<h2 class="text-4xl font-bold text-gray-900">Featured Projects</h2>
						<a href="/projects" class="text-blue-600 hover:text-blue-700 font-medium">
							View All Projects â†’
						</a>
					</div>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						{latestProjects.map((project: CollectionEntry<'projects'>) => (
							<ProjectCard 
								title={project.data.title}
								description={project.data.description}
								technologies={project.data.technologies}
								imageUrl={project.data.image}
								projectUrl={project.data.liveUrl}
								githubUrl={project.data.github}
							/>
						))}
					</div>
				</div>
			</section>

			<section id="contact" class="py-20 bg-gradient-to-br from-blue-50 to-white">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center mb-16">
						<h2 class="text-4xl font-bold text-gray-900 mb-4">{contactContent?.data?.title ?? 'Contact Me'}</h2>
						<p class="text-xl text-gray-700">{contactContent?.data?.subtitle ?? 'Subtitle not available'}</p>
						<div class="w-24 h-1 bg-blue-600 mx-auto mt-8 rounded-full"></div>
					</div>
					<div class="max-w-3xl mx-auto">
						<div class="bg-white rounded-xl shadow-lg p-8">
							<div class="prose prose-lg max-w-none contact-links">
								<ContactContent />
							</div>
							<div class="mt-8 flex flex-wrap justify-center gap-4">
								<a href="mailto:your.email@example.com" 
								class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors">
									<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
									</svg>
									Email Me
								</a>
								<a href="https://github.com/yourusername" 

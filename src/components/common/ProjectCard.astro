---
interface Props {
    title: string;
    description: string;
    technologies: string[];
    imageUrl?: string;
    projectUrl?: string;
    githubUrl?: string;
}

const { title, description, technologies, imageUrl, projectUrl, githubUrl } = Astro.props;
---

<div class="card bg-base-200 hover:-translate-y-1 transition-transform">
    {imageUrl && (
        <figure>
            <img src={imageUrl} alt={title} class="h-48 w-full object-cover" />
        </figure>
    )}
    <div class="card-body">
        <h2 class="text-xl font-medium text-base-content">{title}</h2>
        <p class="text-base-content/80 text-sm">{description}</p>
        <div class="flex flex-wrap gap-2 py-3">
            {technologies.map((tech) => (
                <div class="badge badge-primary">{tech}</div>
            ))}
        </div>
        <div class="card-actions justify-between mt-2">
            {githubUrl && (
                <a href={githubUrl} 
                   class="btn btn-sm btn-ghost flex gap-1 pl-0"
                   target="_blank" 
                   rel="noopener noreferrer">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                    Code
                </a>
            )}
            {projectUrl && (
                <a href={projectUrl} 
                   class="btn btn-sm btn-primary"
                   target="_blank" 
                   rel="noopener noreferrer">
                    View Live
                </a>
            )}
        </div>
    </div>
</div>
---
interface Props {
    title: string;
    description: string;
    technologies: string[];
    imageUrl?: string;
    projectUrl?: string;
    githubUrl?: string;
}

const { title, description, technologies, imageUrl, projectUrl, githubUrl } = Astro.props;
---

<div class="card bg-base-100 shadow-xl hover:-translate-y-1 transition-transform">
    {imageUrl && (
        <figure>
            <img src={imageUrl} alt={title} class="h-48 w-full object-cover" />
        </figure>
    )}
    <div class="card-body">
        <h2 class="card-title">{title}</h2>
        <p>{description}</p>
        <div class="flex flex-wrap gap-2 py-4">
            {technologies.map((tech) => (
                <div class="badge badge-primary">{tech}</div>
            ))}
        </div>
        <div class="card-actions justify-end">
            {projectUrl && (
                <a href={projectUrl} 
                   class="btn btn-primary"
                   target="_blank" 
                   rel="noopener noreferrer">
                    View Live
                </a>
            )}
            {githubUrl && (
                <a href={githubUrl} 
                   class="btn btn-outline btn-primary"
                   target="_blank" 
                   rel="noopener noreferrer">
                    View Code
                </a>
            )}
        </div>
    </div>
</div>
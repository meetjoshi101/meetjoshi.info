---
import { getEntry } from 'astro:content';

const heroContent = await getEntry('site-content', 'hero');
const { title, subtitle } = heroContent?.data ?? { title: '', subtitle: '' };
const { Content } = await (heroContent?.render() ?? { Content: () => null });
---

<div class="hero min-h-screen bg-gradient-to-br from-base-200 to-transparent">
    <div class="hero-content text-center">
        <div class="max-w-3xl">
            <h1 class="text-5xl md:text-6xl font-bold leading-tight mb-4">
                {title}
            </h1>
            <p class="text-2xl text-primary mb-6">{subtitle}</p>
            <div class="text-xl opacity-90 mb-8 prose mx-auto">
                <Content />
            </div>
            <div class="flex gap-4 justify-center">
                <a href="#contact" class="btn btn-primary">Contact Me</a>
                <a href="#projects" class="btn btn-outline btn-primary">View My Work</a>
            </div>
        </div>
    </div>
</div>
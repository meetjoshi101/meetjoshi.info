---
import { getEntry } from "astro:content";

const heroContent = await getEntry("site-content", "hero");
const { title, subtitle } = heroContent?.data ?? { title: "", subtitle: "" };
const { Content } = await (heroContent?.render() ?? { Content: () => null });
---

<section class="py-10 relative overflow-hidden">
  <!-- Background accent elements with improved styling -->
  <div
    class="absolute top-20 left-10 w-96 h-96 bg-primary opacity-5 rounded-full blur-3xl -z-10"
  >
  </div>
  <div
    class="absolute -bottom-20 right-10 w-96 h-96 bg-secondary opacity-5 rounded-full blur-3xl -z-10"
  >
  </div>
  <div
    class="absolute top-40 right-20 w-64 h-64 bg-accent opacity-3 rounded-full blur-3xl -z-10"
  >
  </div>

  <div class="flex flex-col gap-5 items-center text-start mx-auto">
    <div class="max-w-4xl mx-auto relative">
      <!-- Main content with improved typography -->
      <h1
        class="text-4xl md:text-5xl lg:text-6xl font-bold text-base-content mb-8 leading-tight drop-shadow-sm"
      >
        {title.split("Meet")[0] || title}<span class="text-primary"
          >{title.split("HelloðŸ‘‹, I'm")[1] || title}</span
        >
      </h1>
    </div>

    <div
      class="inline-flex items-center gap-3 px-6 py-2 rounded-full bg-base-200/70 backdrop-blur-sm shadow-sm"
    >
      <span class="w-3 h-3 rounded-full bg-primary animate-pulse"></span>
      <p class="text-xl md:text-2xl font-medium">{subtitle}</p>
    </div>

    <!-- Hero content with enhanced styling for bold statements -->
    <div class="max-w-3xl mx-auto px-4">
      <div
        class="hero-statement text-lg md:text-2xl leading-relaxed space-y-8 mb-8"
      >
        <Content />
      </div>
    </div>

    <!-- Buttons with improved styling -->
    <div class="flex flex-wrap gap-5 justify-center mt-8">
      <a
        href="#contact"
        class="btn btn-primary btn-lg shadow-sm transition-all hover:-translate-y-1"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="mr-2"
          ><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline
            points="7 10 12 15 17 10"></polyline><line
            x1="12"
            y1="15"
            x2="12"
            y2="3"></line></svg
        >
        My Resume
      </a>
      <a
        href="#contact"
        class="btn btn-outline btn-lg shadow-sm transition-all hover:scale-105"
        >Contact Me</a
      >
      <a
        href="#projects"
        class="btn btn-ghost btn-lg group hover:bg-base-200/50 transition-all"
      >
        View My Work
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="ml-1 transition-transform group-hover:translate-x-2"
          ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
        >
      </a>
    </div>
  </div>
</section>
